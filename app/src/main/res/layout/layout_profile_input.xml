<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.arash.altafi.chatinputview.chatInput.ChatEditText
        android:id="@+id/etInput"
        style="@style/txt.h2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="?attr/colorPrimary"
        android:lineSpacingExtra="1dp"
        android:maxLength="30"
        android:maxLines="1"
        android:minHeight="@dimen/input_view_initial_height"
        android:paddingStart="14dp"
        android:paddingEnd="32dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnEmoji"
        android:layout_width="@dimen/input_view_icon_height"
        android:layout_height="@dimen/input_view_icon_height"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:tint="?attr/colorPrimary"
        app:srcCompat="@drawable/ic_emoji" />


</RelativeLayout>